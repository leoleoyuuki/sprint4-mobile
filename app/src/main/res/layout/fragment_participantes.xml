        </LinearLayout>

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc" />

        <!-- Participante 4 -->
        <LinearLayout
            android:layout_width="match_parent"
